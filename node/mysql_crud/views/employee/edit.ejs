<div class="container">
    <h2>Teachers</h2>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4>Update Teacher</h4>
            <form action="/teacher/update" method="post">
                <input type="hidden" name="id" value="<%= result._id %>" />
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" value="<%= result.name %>" name="name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Salary</label>
                    <input type="text" name="salary" value="<%= result.salary %>" class="form-control" />
                </div>
                <div class="form-group">
                    <label>City</label>
                    <select class="form-control" name="city">
                        <option>Select</option>
                        <option <% if(result.city=="indore") { %> selected='selected' <% } %>>indore</option>
                        <option <% if(result.city=="bhopal") { %> selected='selected' <% } %>>bhopal</option>
                        <option <% if(result.city=="mumbai") { %> selected='selected' <% } %>>mumbai</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>
</div>